<% layout("/layouts/boilerplate") -%>

<div class="listings-container">
    <div class="listings-header">
        <h1 class="listings-title">Discover Your Perfect Stay</h1>
        <p class="listings-subtitle">Explore our curated collection of serene accommodations</p>
    </div>

    <div class="listings-grid">
        <% for(let listing of allListings){ %>
            <a href="/pathlistings/<%= listing._id %>" class="listing-card-link">
                <div class="listing-card">
                    <div class="listing-image-container">
                        <img src="<%= listing.image %>" alt="<%= listing.title %>" class="listing-image">
                        <div class="listing-overlay">
                            <h3 class="listing-title"><%= listing.title %></h3>
                        </div>
                    </div>
                    <div class="listing-info">
                        <p class="listing-price">&#8377; <%= listing.price.toLocaleString("en-IN") %> <span class="price-unit">/ night</span></p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>